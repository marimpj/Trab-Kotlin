<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.trabalhoquiz">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/nome"
        android:label="@string/app_name"
        android:roundIcon="@drawable/nome"
        android:supportsRtl="true"
        android:theme="@style/Theme.TrabalhoQuiz">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Resultado" />
        <activity android:name=".Questoes" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyQuizApp"
            android:windowSoftInputMode="adjustResize">
        </activity>
    </application>

</manifest>